# Production Environment Variables Example
# Copy to .env.prod for production deployment

# Django Core (PRODUCTION)
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (PostgreSQL recommended for production)
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Security (HTTPS Required - Set all to True)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Session Settings
SESSION_COOKIE_AGE=1800
SESSION_SAVE_EVERY_REQUEST=False

# Channels (Redis recommended for production)
CHANNEL_LAYER_BACKEND=channels_redis.core.RedisChannelLayer
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=WARNING
