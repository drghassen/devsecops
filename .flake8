[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    migrations,
    .eggs,
    *.egg,
    build,
    dist

# Ignore specific error codes
ignore =
    E203,
    E501,
    W503,
    E231

per-file-ignores =
    __init__.py:F401
    settings.py:E501

