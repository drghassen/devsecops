[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    migrations,
    .eggs,
    *.egg,
    build,
    dist

# Ignore specific error codes
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E231   # missing whitespace after ','

per-file-ignores =
    __init__.py:F401
    settings.py:E501
